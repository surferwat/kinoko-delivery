<% content_for :title do %>
  Profile
<% end %>

<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    
      <%= form_with class: "space-y-6", model: @user, builder: TailwindFormHelper::TailwindFormBuilder, method: "patch", url: users_path do |form| %>
        
        <%= render partial: "shared/form_errors", locals: { form: form } %>
        
        <div>
          <%= form.label :username %>
          <div class="mt-1">
            <%= form.text_field :username %>
          </div>
        </div>

        <div>
          <%= form.label :password %>
          <div class="mt-1">
            <%= link_to  "Change your login info here", edit_password_path, class: "w-full py-2 sm:text-sm underline" %>
          </div>
        </div>

        <div>
          <%= form.submit "Save changes" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
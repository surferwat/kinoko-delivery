<% content_for :title do %>
  Add product
<% end %>

<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with class: "space-y-6", model: @product, builder: TailwindFormHelper::TailwindFormBuilder, url: company_products_path do |form| %>
        
        <%= render partial: "shared/form_errors", locals: { form: form } %>

        <div>
          <%= form.label :name %>
          <div class="mt-1">
            <%= form.text_field :name %>
          </div>
        </div>

        <div>
          <%= form.label :description %>
          <div class="mt-1">
            <%= form.text_field :description %>
          </div>
        </div>

         <div>
          <%= form.label :kind %>
          <div class="mt-1">
            <%= form.select :kind, options_for_select(Product.kinds.keys), include_blank: "Select kind" %>
          </div>
        </div>

        <div>
          <%= form.label :prefecture_of_origin %>
          <div class="mt-1">
            <%= form.select :prefecture_of_origin, options_for_select(Product.prefecture_of_origins.keys), include_blank: "Select prefecture" %>
          </div>
        </div>

        <div>
          <%= form.label :price %>
          <div class="mt-1">
            <%= form.text_field :price %>
          </div>
        </div>

        <div>
          <%= form.label :items_per_unit %>
          <div class="mt-1">
            <%= form.text_field :items_per_unit %>
          </div>
        </div>

         <div>
          <%= form.label :weight_per_unit %>
          <div class="mt-1">
            <%= form.text_field :weight_per_unit %>
          </div>
        </div>

        <div>
          <%= form.submit "Add product" %>
        </div>
      <% end %>

    </div>
  </div>
</div>


